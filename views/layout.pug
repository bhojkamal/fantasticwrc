      link(href='/stylesheets/sticky-footer.css', rel='stylesheet')
  
  
  body(data-spy="scroll",data-target=".scrollspy")
    block header
      // Fixed navbar
      +navbar-fixed("Fantasy","navbar")
        +nav_item("/") #[i.fa.fa-home] Home
        +nav_item("/players") #[i.fa.fa-th-list] Find All Players
        +nav_item("/players/add") #[i.fa.fa-plus] Get New Players
        +nav_item("/players/winners") #[i.fa.fa-list-alt] See Winners List #[i.fa.fa-trophy]
        +nav_item("/players/addwinner") #[i.fa.fa-plus]  GW Winners Add
        if !user
          +nav_item("/login") #[i.fa.fa-sign-in-alt] Login
        else
          +nav_item("/logout") #[i.fa.fa-sign-out-alt] Logout
        

        +nav_item_dropdown("#")(label="Dont Click Me")
          +nav_item("#") Why did
          +nav_item("#") You Clicked
          +nav_item("#") Meeeee???
          +nav_divider
          +nav_item("#") Now I'm
          +nav_item("#") Deaaaad!!!
          +nav_divider
          +nav_item("#") HAHA Just a Joke
      .container
        block content
      
      footer.footer
