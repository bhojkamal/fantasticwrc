extends ../layout
block content
	section.content-header 
		h1 
			| Add some players
			|
			small &nbsp;it all starts here

		ol.breadcrumb 
			//-li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active &nbsp; Players Add
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Players
				//- .box-tools.pull-right
				//- 	button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
				//- 		i.fa.fa-minus
					
			.box-body
				form(role='form' method='post' action='/players/add')
					
						
						.col-md-6.col-md-offset-3
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable(role=alert)
										button.close(type='button', data-dismiss='alert',aria-label="Close")
											span(aria-hidden='true')
												| &times;
										h4
											i.icon.fa.fa-ban
											| Alert!
										| !{messages.msg_error}
								.form-group
									label
										| Name
									input(type='text',value=name,name='name',placeholder='Enter Name', autofocus).form-control
								.form-group
									label
										| Team
									input(type='text',name='team',placeholder='Enter Team Name').form-control
								.form-group
									label
										| Address
									input(type='text',name='address',placeholder='Enter address').form-control
								.form-group
									label
										| Email
									input(type='text',value=email,name='email',placeholder='Enter Address').form-control
								.form-group
									label
										| Phone
									input(type='text',name='phone',placeholder='Enter Phone').form-control
								.form-group
									label
										| Favourite Club
									input(type='text',name='favteam',placeholder='Enter Favourite Club').form-control
							.box-footer
								button(type='submit').btn.btn-primary
									| Submit
								a(href='/players').btn.btn-primary.pull-right
									| Back
