extends ../layout
block content 
	section.content-header 
		h1 
			| Edit Players
			|
			small menu for editing Players data
		ol.breadcrumb 
			li 
				//- a(href='#') 
				//- 	i.fa.fa-dashboard
				//- 	| Level 
			li.active Edit Players Data 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Players
				//- .box-tools.pull-right
				//- 	button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
				//- 		i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/players/edit/'+(id==undefined) ? data.id : id)
					.row
						
						.col-md-6.col-md-offset-3
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable(role=alert)
										button.close(type='button', data-dismiss='alert',aria-label="Close")
											span( aria-hidden='true')
												| &times;
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable
										button.close(type='button', data-dismiss='alert',aria-label="Close")
											span( aria-hidden='true')
												| &times;
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Name
									input(type='text',value=data.name,name='name',placeholder='Enter Name', autofocus).form-control
								.form-group
									label
										| Team
									input(type='text',value=(team == undefined) ? data.team : team ,name='team',placeholder='Enter Team Name').form-control
								.form-group
									label
										| Address
									input(type='text',value=(address == undefined) ? data.address : address ,name='address',placeholder='Enter address').form-control
								.form-group
									label
										| Email
									input(type='text',value=(email == undefined) ? data.email : email ,name='email',placeholder='Enter Email').form-control
								.form-group
									label
										| Phone
									input(type='text',value=(phone == undefined) ? data.phone : phone ,name='phone',placeholder='Enter Phone').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									| Edit
								a(href='/players').btn.btn-primary.pull-right
									| Back
